<div class="jumbotron jumbotron-fluid bg-dark text-light p-5">
  <h1>Burgers App!</h1>
</div>

<div class="container">
  <div class="row">
    {{!-- column for form --}}
    <div class="col-12 col-md-3">
      <form id="burger-form">
        <input class="form-control" id="name-input" placeholder="Burger Name"/>
        <button class="btn btn-success btn-block" type="submit">
          Add A Burger!
        </button>
      </form>
    </div>
    {{!-- end left column --}}
    {{!-- right column to display burgers--}}
    <div class="col-12 col-md-9">
      {{!-- make two columns in right column --}}
      <div class="row">
        {{!-- inner left column --}}
        <div class="col-12 col-md-6">
          <h2>Burgers That Aren't Devoured</h2>
          <ul class="list-group">
            {{!-- use handlebars to print burgers that aren't devoured --}}
            {{#each burgerData}}
              {{!-- this is the same as saying !== --}}
              {{#unless devoured}}
                <li class="list-group-item d-flex">
                  {{name}} 
                  <span class="ml-auto">
                    <button 
                      data-id="{{id}}"
                      data-devoured="true"
                      class="btn btn-sm btn-info update-burger"
                      >
                     Devour Burger
                    </button>
                  </span>
                </li>
              {{/unless}}
            {{/each}}
          </ul>
        </div>
        {{!-- end inner left --}}
        {{!-- inner right --}}
        <div class="col-12 col-md-6">
          <h2>Devoured Burgers</h2>
          <ul class="list-group">
            {{!-- use handlebars to print burgers that aren't devoured --}}
            {{#each burgerData}}
            
            {{#if devoured}}
            <li class="list-group-item d-flex">
              {{name}}
              <span class="ml-auto">
                <button data-id="{{id}}" data-devoured="true" class="btn btn-sm btn-info update-burger">
                  YUM!
                </button>
               </span>
            </li>
            {{/if}}
            {{/each}}
          </ul>
        </div>
        {{!-- end inner right --}}
      </div>
    </div>
  </div>
</div>

<script src="./assets/js/burgers.js"></script>